# Domain used for cookies and canonical URLs (optional)
DOMAIN=stonkmarket.local

# Admin credentials
ADMIN_USER=admin
ADMIN_PASS=change-me

# Auth secret for signing cookies
AUTH_SECRET=change-me-secret

# Enable HTTPS cookies (set true when served behind TLS terminator)
HTTPS=false

# Enable built-in scheduler (runs cronjobs in-process). Set false when running multiple workers.
SCHEDULER_ENABLED=true

# Gunicorn worker count (set to 1 if scheduler enabled to avoid duplicate runs)
GUNICORN_WORKERS=1

# Database path inside container
DB_PATH=/data/dips.sqlite
